[llm]
# LLM API 配置
api_key = your_api_key_here
base_url = https://api.openai.com/v1
model = gpt-4o
# opt_model = deepseek-chat
# enable_subtitle_optimization = false

[crawler]
# 爬虫配置
# 回溯天数：每次运行抓取最近 N 天的内容
days_lookback = 3
# 整理并发数
organize_workers = 5
# 内容增强并发数
enrich_workers = 3
# X (Twitter) 源请求延迟范围（秒）
x_request_delay_min = 30
x_request_delay_max = 60

[x_scraper]
# X Scraper 模块配置 (直接抓取 X 推文，无需 RSSHub)
# 是否启用 x_scraper 替代 RSSHub 方式获取 X 推文
enabled = false
# 账号凭证（留空则自动从 rsshub-docker.env 读取）
# 格式: auth_token1:ct01;auth_token2:ct02
auth_credentials =
# 每个用户抓取的推文上限
max_tweets_per_user = 20
# 请求间延迟 (秒)
request_delay_min = 3
request_delay_max = 8
# 用户切换间延迟 (秒)
user_switch_delay_min = 10
user_switch_delay_max = 30
# 请求超时 (秒)
request_timeout = 30
# 最大重试次数
max_retries = 3
# 是否包含转推 (Retweets)
include_retweets = false
# 是否包含回复
include_replies = false
# 断路器: 连续失败多少次后暂停请求
circuit_breaker_threshold = 5
# 断路器: 暂停时间 (秒)
circuit_breaker_cooldown = 60
# 可选: 自定义 GraphQL Query IDs (JSON 格式)
query_ids =
# 可选: 自定义/追加 GraphQL Features (JSON 格式)
features =

[rsshub]
# RSSHub 服务地址
base_url = http://127.0.0.1:1200

[weixin_accounts]
# 微信公众号列表
# 格式：显示名称 = RSS地址
腾讯技术工程 = https://wechat2rss.xlab.app/feed/xxx.xml

[youtube_channels]
# YouTube 频道列表
# 格式：显示名称 = 频道ID
Karpathy = AndrejKarpathy
OpenAI = UCXZCJLdBC09xxGZ6gcdrc6A

[x_accounts]
# X (Twitter) 账户列表
# 格式：显示名称 = 账户ID
OpenAI = OpenAI
Karpathy = karpathy

[entity_mapping]
# 实体映射
# Format: CanonicalEntity = alias1, alias2
OpenAI = OpenAI, Karpathy
